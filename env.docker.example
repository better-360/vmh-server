# =================================================================
# VMH Server - Docker Environment Configuration
# =================================================================
# IMPORTANT: Copy this file to .env.docker and change all default values before deploying to production!

# =================================================================
# Database Configuration
# =================================================================
DATABASE_URL=postgresql://vmh_user:vmh_password@postgres:5432/vmh_database?schema=public
POSTGRES_DB=vmh_database
POSTGRES_USER=vmh_user
POSTGRES_PASSWORD=vmh_password

# =================================================================
# Redis Configuration
# =================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================================================
# Application Configuration
# =================================================================
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# =================================================================
# JWT Configuration
# =================================================================
# IMPORTANT: Change these in production!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# =================================================================
# Email/Mail Configuration
# =================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=VMH Server

# =================================================================
# Stripe Payment Configuration
# =================================================================
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================================================
# AWS S3 Configuration
# =================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_ENDPOINT=

# =================================================================
# Firebase Configuration (if used)
# =================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-client-email@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# =================================================================
# Google APIs Configuration
# =================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =================================================================
# Supabase Configuration (if used)
# =================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =================================================================
# Security Configuration
# =================================================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =================================================================
# File Upload Configuration
# =================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DESTINATION=./uploads

# =================================================================
# Monitoring & Logging
# =================================================================
LOG_LEVEL=info
ENABLE_SWAGGER=false

# =================================================================
# Bull Queue Configuration (Redis-based)
# =================================================================
BULL_REDIS_HOST=redis
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=

# =================================================================
# Health Check Configuration
# =================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# =================================================================
# Session Configuration
# =================================================================
SESSION_SECRET=your_session_secret_change_this_in_production

# =================================================================
# Timezone Configuration
# =================================================================
TZ=UTC

# =================================================================
# Docker Specific
# =================================================================
COMPOSE_PROJECT_NAME=vmh-server